# =================================================================
# DEXTER ENVIRONMENT CONFIGURATION
# =================================================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env files with real credentials!

# =================================================================
# API KEYS (Required)
# =================================================================
ALCHEMY_API_KEY=your_alchemy_api_key_here
BASESCAN_API_KEY=your_basescan_api_key_here
NEXT_PUBLIC_ALCHEMY_API_KEY=your_alchemy_api_key_here

# =================================================================
# BLOCKCHAIN CONFIGURATION
# =================================================================
BASE_RPC_URL=https://base-mainnet.g.alchemy.com/v2/YOUR_API_KEY
BASE_WEBSOCKET_URL=wss://base-mainnet.g.alchemy.com/v2/YOUR_API_KEY
UNISWAP_SUBGRAPH_URL=https://api.thegraph.com/subgraphs/name/messari/uniswap-v3-base
METEORA_API_URL=https://api.meteora.ag/

# =================================================================
# DATABASE CONFIGURATION
# =================================================================
DATABASE_URL=postgresql://user:password@localhost:5432/dexter
POSTGRES_USER=dexter
POSTGRES_PASSWORD=your_secure_database_password_here
POSTGRES_DB=dexter

# =================================================================
# REDIS CONFIGURATION
# =================================================================
REDIS_URL=redis://:your_redis_password@localhost:6379
REDIS_PASSWORD=your_secure_redis_password_here

# =================================================================
# SERVER CONFIGURATION
# =================================================================
API_HOST=0.0.0.0
API_PORT=8080
SERVER_HOST=0.0.0.0
SERVER_PORT=8000
LOG_LEVEL=INFO
ENVIRONMENT=development

# =================================================================
# SECURITY (Generate strong values!)
# =================================================================
JWT_SECRET=your_very_long_and_secure_jwt_secret_key_here
PRIVATE_KEY=your_wallet_private_key_here

# =================================================================
# DEPLOYMENT (Optional - for production deployment)
# =================================================================
VPS_API_TOKEN=your_vps_provider_api_token_here
SERVER_IP=your_server_ip_address_here
DEXBRAIN_API_URL=http://localhost:8080

# =================================================================
# RATE LIMITING & PERFORMANCE
# =================================================================
MAX_REQUESTS_PER_MINUTE=60
RATE_LIMIT_PER_MINUTE=100
PARALLEL_WORKERS=2
CACHE_TTL=300

# =================================================================
# MONITORING (Optional)
# =================================================================
PROMETHEUS_PORT=9090
GRAFANA_ADMIN_PASSWORD=your_secure_grafana_password

# =================================================================
# DEXBRAIN SETTINGS
# =================================================================
DATA_QUALITY_THRESHOLD=60.0
MAX_AGENTS_PER_REQUEST=1000

# =================================================================
# FRONTEND CONFIGURATION
# =================================================================
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_API_URL=http://localhost:8080

# =================================================================
# MLFLOW CONFIGURATION (Optional - for ML experiment tracking)
# =================================================================
MLFLOW_TRACKING_URI=sqlite:///mlflow.db
MLFLOW_ARTIFACT_ROOT=./mlruns

# =================================================================
# DEVELOPMENT MODE FLAGS
# =================================================================
# Set to 'true' to enable development mode fallbacks
DEV_MODE=false
# Use SQLite instead of PostgreSQL for local development
USE_SQLITE_FALLBACK=false
# Use mock data instead of real Alchemy API calls
USE_MOCK_DATA=false

# =================================================================
# ORACLE CONFIGURATION (Required for contracts)
# =================================================================
# Chainlink price feed addresses on Base
CHAINLINK_ETH_USD_FEED=0x71041dddad3595F9CEd3DcCFBe3D1F4b0a16Bb70
# TWAP configuration
TWAP_OBSERVATION_WINDOW=1800
TWAP_MAX_DEVIATION_BPS=500

# =================================================================
# SECURITY NOTES:
# =================================================================
# 1. Generate strong passwords using: openssl rand -base64 32
# 2. Use environment-specific values for each deployment
# 3. Never commit real credentials to git
# 4. Rotate credentials regularly
# 5. Use different credentials for development/staging/production
# =================================================================

# =================================================================
# MINIMUM REQUIRED VARIABLES
# =================================================================
# For contracts: ALCHEMY_API_KEY, PRIVATE_KEY (testnet only)
# For backend: DATABASE_URL (or USE_SQLITE_FALLBACK=true)
# For ML: ALCHEMY_API_KEY (or USE_MOCK_DATA=true for dev)
# =================================================================