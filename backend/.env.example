# =================================================================
# DEXTER BACKEND ENVIRONMENT CONFIGURATION
# =================================================================
# Copy this file to .env and fill in your actual values
# This file is for backend services only

# =================================================================
# API KEYS (Required)
# =================================================================
ALCHEMY_API_KEY=your_alchemy_api_key_here
BASESCAN_API_KEY=your_basescan_api_key_here

# =================================================================
# BLOCKCHAIN CONFIGURATION
# =================================================================
BASE_RPC_URL=https://base-mainnet.g.alchemy.com/v2/YOUR_API_KEY
BASE_WEBSOCKET_URL=wss://base-mainnet.g.alchemy.com/v2/YOUR_API_KEY

# =================================================================
# DATABASE CONFIGURATION
# =================================================================
DATABASE_URL=postgresql://user:password@localhost:5432/dexter
POSTGRES_USER=dexter
POSTGRES_PASSWORD=your_secure_database_password_here
POSTGRES_DB=dexter

# =================================================================
# REDIS CONFIGURATION
# =================================================================
REDIS_URL=redis://:your_redis_password@localhost:6379
REDIS_PASSWORD=your_secure_redis_password_here

# =================================================================
# DEXBRAIN API CONFIGURATION
# =================================================================
API_HOST=0.0.0.0
API_PORT=8080
LOG_LEVEL=INFO
ENVIRONMENT=development

# =================================================================
# ML/AI CONFIGURATION
# =================================================================
MODEL_PATH=/app/models
KNOWLEDGE_BASE_PATH=/app/knowledge_base
DATA_QUALITY_THRESHOLD=60.0

# =================================================================
# RATE LIMITING & PERFORMANCE
# =================================================================
MAX_REQUESTS_PER_MINUTE=60
PARALLEL_WORKERS=2
CACHE_TTL=300

# =================================================================
# MONITORING (Optional)
# =================================================================
PROMETHEUS_PORT=9090
METRICS_ENABLED=true

# =================================================================
# EXTERNAL SERVICES (Optional)
# =================================================================
DEXBRAIN_API_URL=http://localhost:8080
LOG_STREAM_URL=http://localhost:3003